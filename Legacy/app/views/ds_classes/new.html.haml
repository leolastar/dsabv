- provide(:title, 'New class')
%div.row
  %div.col-xs-12.col-sm-10.col-sm-offset-1.jumbotron
    %h1 New Class
    %div.row
      %div.col-xs-12.col-md-6.col-md-offset-3
        = form_for(@ds_class) do |f|
          = render 'shared/error_messages', object: f.object

          = f.label :title
          = f.text_field :title, class: 'form-control'

          = f.label :start_date, "Start Date (MM-DD-YYYY)"
          = f.text_field :start_date, class: "datepicker", :placeholder => "  Ex: September 2, 2015"

          = f.label :end_date, "End Date (MM-DD-YYYY)"
          = f.text_field :end_date, class: "datepicker", :placeholder => "  Ex: September 2, 2015"

          = f.label :place, "Location"
          = f.text_field :place, class: 'form-control', :placeholder => "Enter location"

          = f.label :description
          = f.text_area :description, class: 'form-control', :placeholder => "Enter description"

          = f.submit "Create new class", class: "btn btn-primary home-page"