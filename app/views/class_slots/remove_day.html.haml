- provide(:title, "Remove day of the week")
%div.row
  %div.col-xs-12.col-sm-10.col-sm-offset-1.jumbotron
    %div.event_info
      %h1 Remove day of the week
      %div.col-xs-12.col-md-6.col-md-offset-3
        - if logged_in? && current_user.admin
          = form_for(@day, url: {controller: :days, action: :destory, params: {class_id: @ds_class.id}}) do |f|
            = render 'shared/error_messages', object: f.object

            = f.label :day, "Day of the week"
            = collection_select :day, :id, @class_slot.days.all, :id, :day, {:prompt => 'Please Select a Day.'}
              
            = f.submit "Submit", class: "btn btn-primary home-page"
          %br/
          = link_to "Back", ds_class_path(@ds_class)
        -else
          Access Denied
