%nav.navbar.navbar-default.navbar-fixed-top.navbar-inverse
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "http://dsabv.org", :id => "logo" } Down Syndrome Association of Brazos Valley
    #navbar.navbar-right.navbar-collapse.collapse{"aria-expanded" => "false", :style => "height: 1px;"}
      %ul.nav.navbar-nav
        %li= link_to "Home", root_path
        %li= link_to "Events", events_path
        %li= link_to "Calendar", calendar_path
        - if logged_in?
          - if current_user.admin
            %li= link_to "Users", users_path
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              Account
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li= link_to "Profile", current_user
              %li= link_to "My registrations", registrations_user_path(current_user)
              %li= link_to "Settings", edit_user_path(current_user)
              %li.divider
              %li= link_to "Log out", logout_path, method: "delete"
        - else
          %li= link_to "Sign up", signup_path
          %li= link_to "Log in", login_path
%div.container
  %div.row
    %div.col-xs-12.col-sm-10.col-sm-offset-1{ :style => "padding-left:0px; padding-right:0px;" }
