<%= provide(:title, 'Home' ) %>

<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1 center jumbotron">
    <h1>Event Registration</h1>
    
    <h4 class="visible-xs-inline">
    <table width = "100%", align="center">
    <tr>
    <td align="right">
    <%= link_to "Volunteering   ", events_path %>
    </td>    
    <td align="center">
    <%= link_to "Classes", ds_classes_path %>
    </td>
    <td align="left">
    <%= link_to "   Buddy Walk", buddy_walks_path %>
    </td>
    </tr>
    </table>
    </h3>

    <h3 class="visible-sm-inline visible-md-inline visible-lg-inline ">
