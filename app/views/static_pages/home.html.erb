<%= provide(:title, 'Home' ) %>

<div class="row">
  <div class="col-xs-12 col-sm-12 center jumbotron">
    <h1>Event Registration</h1>
    <% unless logged_in? %>
      <%= link_to "Sign up", signup_path, class: "btn btn-primary home-page" %>
      &nbsp
      <%= link_to "Log in", login_path, class: "btn btn-primary home-page" %>
    <% end %>
  </div>
</div>

<% if logged_in? && current_user.admin? %>
  <%= link_to "Edit Below Text", { action: :edit, controller: :articles, id: 1 }, class: "btn btn-primary home-page" %>
<% end %>

<div class="row">
  <div class="col-xs-12 col-sm-12 jumbotron">
    <div><%= @article_top.text.html_safe %></div>
  </div>
</div>

<% if logged_in? && current_user.admin? %>
  <%= link_to "Edit Below Text", { action: :edit, controller: :articles, id: 2 }, class: "btn btn-primary home-page" %>
<% end %>

<div class="row">
  <div class="col-xs-12 col-sm-12 jumbotron">
