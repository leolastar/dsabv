    <tr>
    <td align="right">
    <%= link_to "Volunteering   ", events_path %>
    </td>    
    <td align="center">
    <%= link_to "Classes", ds_classes_path %>
    </td>
    <td align="left">
    <%= link_to "   Buddy Walk", buddy_walks_path %>
    </td>
    </tr>
    </table>
