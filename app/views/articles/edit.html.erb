<%= provide(:title, 'Edit Text Box' ) %>

<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1 jumbotron">
    <h1>Edit Text Box</h1>
    <div class="row">
    	<div class="col-xs-12 col-sm-10 col-sm-offset-1">
		    <%= form_for :article, url: :article, method: :patch do |f| %>
		    	<p>
			    	<%= f.label :text %><br>
				    <%= f.text_area :text, class: 'form-control' %>
			  	</p>

		      <%= f.submit "Submit", class: "btn btn-primary home-page" %>
		    <% end %>
		</div>
	</div>
  </div>
</div>