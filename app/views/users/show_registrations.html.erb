<%= provide(:title, 'My registrations') %>
<h1> Registered Events </h1>
<div class="col-md-10 col-md-offset-1">
  <table class="table">
    <tr>
      <th class="col-md-6">Event</th>
      <th class="col-md-4">Time</th>
    </tr>
    <% @registrations.each do |registration| %>
      <tr>
        <td class="col-md-6">
          <%= link_to registration.event.title, registration.event %>
        </td>
        <td class="col-md-4">
          <%= registration.event.date %><br>
          <%= registration.start_time.strftime("%I:%M %p") %> -- <%= registration.end_time.strftime("%I:%M %p") %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
