<% provide(:title, "Edit user") %>
<div class="row">
  <div class="col-xs-12 col-sm-12 jumbotron">
    <h1>Update your profile</h1>

    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>

          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>

          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>

          <%= f.label :phone %>
          <%= f.telephone_field :phone, class: 'form-control' %>

          <%= f.label :address %>
          <%= f.text_field :address, class: 'form-control' %>

          <%= f.label :emergency_contact_name %>
          <%= f.text_field :emergency_contact_name, class: 'form-control' %>

          <%= f.label :emergency_contact_phone %>
          <%= f.telephone_field :emergency_contact_phone, class: 'form-control' %>
          
          <%= link_to "Change Password",  new_password_reset_path , :class => "btn btn-primary" %>

          <%= f.submit "Save changes", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
