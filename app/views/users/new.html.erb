<% provide(:title, 'Sign up') %>

<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1 jumbotron">
    <h1>Sign up</h1>
      <div class="row">
        <div class="col-xs-12 col-md-6 col-md-offset-3">
          <%= form_for(@user) do |f| %>
           <%= render 'shared/error_messages', object: f.object %>

            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>

            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>

            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>

            <%= f.label :password_confirmation, "Password Confirmation" %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>

            <%= f.label :phone, "Phone Number" %>
            <%= f.telephone_field :phone, class: 'form-control' %>

            <%= f.label :address %>
            <%= f.text_field :address, class: 'form-control' %>

            <%= f.label :emergency_contact_name %>
            <%= f.text_field :emergency_contact_name, class: 'form-control' %>

            <%= f.label :emergency_contact_phone %>
            <%= f.telephone_field :emergency_contact_phone, class: 'form-control' %>

            <%= f.submit "Create my account", class: "btn btn-primary home-page" %>
          </div>
        </div>
    <% end %>
  </div>
</div>
