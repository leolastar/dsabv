%div.row
  %div.col-xs-12.col-sm-10.col-sm-offset-1.jumbotron
    %h1 #{@buddy_walk.title}
    %div.row
      %div.col-xs-12.col-sm-8
        %div.buddy_walk_info
          %h3 Date
          = @buddy_walk.date

          %h3 Location
          = @buddy_walk.place

          %h3 Description
          = @buddy_walk.description.html_safe
          %p
        - if logged_in? && current_user.staff
          = link_to "Roster", roster_of_event_path(@buddy_walk)
          |
        - if logged_in? && current_user.admin
          = link_to "Edit", edit_buddy_walk_path(@buddy_walk)
          |
          = link_to "Delete", buddy_walk_path(@buddy_walk), method: :delete, data: { confirm: "Do you want to delete this event?" }
          |
        = link_to "Back", buddy_walks_path
      %div.col-xs-12.col-sm-4
        - if @buddy_slot != nil
          %ol.time_slots
            = render @buddy_slot