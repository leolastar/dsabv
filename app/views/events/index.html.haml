= provide(:title, 'All events')
%div.row
	%div.col-xs-12.col-sm-10.col-sm-offset-1.jumbotron
		%h1 Events
		%div.row
			%div.col-xs-4.col-sm-4.col-md-offset-4
				= form_for search_path, method: :get do |f|
					= text_field_tag :q, params[:q], :placeholder => "Enter search", class: 'form-control'
					= submit_tag "Search", name: nil
					%br
		%ul.events
			= render @events.sort_by &:date
			%br
			-if logged_in? && current_user.admin
				= link_to "Add new event", new_event_path
			= will_paginate

